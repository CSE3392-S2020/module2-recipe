:scss
    h1{
        font-family: Zilla Slab;
        font-style: normal;
        font-weight: normal;
        font-size: 24px;
        line-height: 28px;
        /* identical to box height, or 117% */
        color: #FFFFFF;
    }
    .frame{
        width: 330px;
        height: 550px;
        background: #3C444D;
        box-shadow: 0px 30px 40px rgba(0, 0, 0, 0.1);
        border-radius: 6px;
        position: absolute;
    }
    .panel{
        width: 270px;
        
        font-family: Montserrat;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 22px;
        color: #CBCFD4;
        margin: 30px;
        img{
            width: 100%;
        }
    }
    .actions{
        display: flex;
        align-items: center;    
        margin: 30px;
        margin-top: 20px;
        width: 270px;
        height: 40px;
        button{
            background: linear-gradient(90deg, #F27A54 0%, #A154F2 100%);
            border-radius: 20px;
            width: 100%;
            height: 100%;
            font-family: Montserrat;
            font-style: normal;
            font-weight: bold;
            font-size: 10px;
            line-height: 12px;
            /* identical to box height */
            text-transform: uppercase;
            color: #FFFFFF;
            border: none;
        }
    }
    
